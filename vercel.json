{
    "version": 2,
    "builds": [
        { "src": "client/package.json", "use": "@vercel/static-build" },
        { "src": "server/api.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/.*", "dest": "server/api.js" },
        { "src": "/(.*)", "dest": "client/$1" }
    ]
}